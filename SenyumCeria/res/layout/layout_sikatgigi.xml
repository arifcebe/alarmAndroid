<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
  >
  
     <ScrollView
         android:id="@+id/ScrollView1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:scrollbars="vertical"
          >
    
   		<RelativeLayout
   		    android:id="@+id/Relative1"
   		    android:layout_width="match_parent"
        	android:layout_height="570dp"
   		    android:background="@drawable/content_background" >
   		    
   		   
   		       <ImageView
     		    android:id="@+id/speaker1"
     		    android:layout_width="40dp"
     		    android:layout_height="40dp"
     		    android:layout_alignParentTop="true"
     		    android:layout_marginTop="10dp"
     		    android:layout_alignParentLeft="true"
     		    android:layout_marginLeft="20dp"
     		    android:contentDescription="@string/imageViewDescription"
     		    android:src="@drawable/musik" />
   		    
   		    <ImageButton 
   		        android:id="@+id/play"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_play"
   		        android:layout_centerHorizontal="true"/>
   		    
   		    <ImageButton 
   		        android:id="@+id/pause"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_pause"
   		        android:layout_marginLeft="60dp"/>
   		    
   		     <ImageButton 
   		        android:id="@+id/stop"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_stop"
   		        android:layout_alignParentRight="true"
   		        android:layout_marginRight="60dp"/>
   		  
  			<!-- Mulai content -->

     		<ImageView
     		    android:id="@+id/carasikatgigi"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_alignParentTop="true"
     		    android:layout_marginTop="100dp"
     		    android:contentDescription="@string/imageViewDescription"
     		    android:src="@drawable/perawatan_menyikat_gigi" />
     		
     		
     		  <TextView 
    	        android:id="@+id/textviewSikatGigi"
    	        android:layout_width="350dp"
    	        android:layout_height="wrap_content"
    	        android:layout_below="@+id/carasikatgigi"
    	        android:gravity="center_horizontal" 
    	        android:textSize="22sp"
    	        android:layout_marginLeft="20dp"
      		    android:layout_marginRight="20dp"
      		    android:layout_marginBottom="20dp"
    	        android:textColor="@color/content"
    	        android:text="@string/SikatGigi"/>
     		  
     		  <TextView 
    	        android:id="@+id/textviewSikatGigi2"
    	        android:layout_width="350dp"
    	        android:layout_height="wrap_content"
    	        android:layout_below="@+id/textviewSikatGigi"
    	        android:gravity="center_horizontal" 
    	        android:textSize="22sp"
    	        android:layout_marginLeft="20dp"
      		    android:layout_marginRight="20dp"
      		    android:layout_marginBottom="20dp"
    	        android:textColor="@color/content"
    	        android:text="@string/SikatGigiDua"/>
     		  
     		  <TextView 
    	        android:id="@+id/textviewSikatGigi3"
    	        android:layout_width="350dp"
    	        android:layout_height="wrap_content"
    	        android:layout_below="@+id/textviewSikatGigi2"
    	        android:gravity="center_horizontal" 
    	        android:textSize="22sp"
    	        android:layout_marginLeft="20dp"
      		    android:layout_marginRight="20dp"
    	        android:textColor="@color/content"
    	        android:text="@string/SikatGigiTiga"/>
    
     	</RelativeLayout>
     	</ScrollView>
    

</RelativeLayout>
   		
     