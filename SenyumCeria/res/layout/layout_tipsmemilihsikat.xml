<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main" >
    
     <ScrollView
         android:id="@+id/ScrollView1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:scrollbars="vertical"
          >
    
    	
   		<RelativeLayout
   		    android:id="@+id/Relative1"
   		    android:layout_width="match_parent"
   		    android:layout_height="fill_parent"
   		    android:background="@drawable/content_background" >
   		    
   		    <ImageView
     		    android:id="@+id/speaker8"
     		    android:layout_width="40dp"
     		    android:layout_height="40dp"
     		    android:layout_alignParentTop="true"
     		    android:layout_marginTop="10dp"
     		    android:layout_alignParentLeft="true"
     		    android:layout_marginLeft="20dp"
     		    android:contentDescription="@string/imageViewDescription"
     		    android:src="@drawable/musik" />
   		    
   		    <ImageButton 
   		        android:id="@+id/playtipssikat"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_play"
   		        android:layout_centerHorizontal="true"/>
   		    
   		    <ImageButton 
   		        android:id="@+id/pausetipssikat"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_pause"
   		        android:layout_marginLeft="60dp"/>
   		    
   		     <ImageButton 
   		        android:id="@+id/stoptipssikat"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_stop"
   		        android:layout_alignParentRight="true"
   		        android:layout_marginRight="60dp"/>
   		  
  			<!-- Mulai content -->

     		<ImageView
     		    android:id="@+id/tipssikat"
     		    android:layout_width="400dp"
     		    android:layout_height="300dp"
     		    android:layout_alignParentTop="true"
     		    android:layout_marginTop="80dp"
     		    android:contentDescription="@string/imageViewDescription"
     		    android:src="@drawable/memilih_sikatgigi" />
     		
     		<TextView
     		      android:id="@+id/textviewSikat"
     		      android:layout_width="match_parent"
     		      android:layout_height="wrap_content"
      		      android:layout_below="@+id/tipssikat"
      		      android:layout_marginLeft="20dp"
      		      android:layout_marginRight="20dp"
     		      android:gravity="center_horizontal"
     		      android:layout_marginBottom="10dp"
     		      android:text="@string/TextMemilihSikat1"
     		      android:textSize="22sp"
    	          android:textColor="@color/content" />
     		
     		<TextView
     		      android:id="@+id/textviewSikat2"
     		      android:layout_width="match_parent"
     		      android:layout_height="wrap_content"
      		      android:layout_below="@+id/textviewSikat"
      		      android:layout_marginLeft="20dp"
      		      android:layout_marginRight="20dp"
     		      android:gravity="center_horizontal"
     		      android:text="@string/TextMemilihSikat2"
     		      android:layout_marginBottom="10dp"
     		      android:textSize="22sp"
    	          android:textColor="@color/content" />
     		
     		<TextView
     		      android:id="@+id/textviewSikat3"
     		      android:layout_width="match_parent"
     		      android:layout_height="wrap_content"
      		      android:layout_below="@+id/textviewSikat2"
      		      android:layout_marginLeft="20dp"
      		      android:layout_marginRight="20dp"
     		      android:gravity="center_horizontal"
     		      android:text="@string/TextMemilihSikat3"
     		      android:textSize="22sp"
     		      android:layout_marginBottom="10dp"
    	          android:textColor="@color/content" />
     		
     		<TextView
     		      android:id="@+id/textviewSikat4"
     		      android:layout_width="match_parent"
     		      android:layout_height="wrap_content"
      		      android:layout_below="@+id/textviewSikat3"
      		      android:layout_marginLeft="20dp"
      		      android:layout_marginRight="20dp"
     		      android:gravity="center_horizontal"
     		      android:text="@string/TextMemilihSikat4"
     		      android:textSize="22sp"
    	          android:textColor="@color/content" />
        
        
    </RelativeLayout> 
    </ScrollView>
    

  

</RelativeLayout>