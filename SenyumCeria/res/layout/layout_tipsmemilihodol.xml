<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
  >
  
     <ScrollView
         android:id="@+id/ScrollView1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:scrollbars="vertical"
          >
    
   		<RelativeLayout
   		    android:id="@+id/Relative1"
   		    android:layout_width="match_parent"
   		    android:layout_height="570dp"
   		    android:background="@drawable/content_background" >
   		    
   		    <ImageView
     		    android:id="@+id/speaker9"
     		    android:layout_width="40dp"
     		    android:layout_height="40dp"
     		    android:layout_alignParentTop="true"
     		    android:layout_marginTop="10dp"
     		    android:layout_alignParentLeft="true"
     		    android:layout_marginLeft="20dp"
     		    android:contentDescription="@string/imageViewDescription"
     		    android:src="@drawable/musik" />
   		    
   		    <ImageButton 
   		        android:id="@+id/playtipsodol"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_play"
   		        android:layout_centerHorizontal="true"/>
   		    
   		    <ImageButton 
   		        android:id="@+id/pausetipsodol"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_pause"
   		        android:layout_marginLeft="60dp"/>
   		    
   		     <ImageButton 
   		        android:id="@+id/stoptipsodol"
   		        android:layout_width="50dp"
   		        android:layout_height="50dp"
   		        android:layout_marginTop="45dp"
   		        android:background="@drawable/button_stop"
   		        android:layout_alignParentRight="true"
   		        android:layout_marginRight="60dp"/>
   		  
  			<!-- Mulai content -->

     		<ImageView
     		    android:id="@+id/tipsodol"
     		    android:layout_width="fill_parent"
     		    android:layout_height="wrap_content"
     		    android:layout_alignParentTop="true"
     		    android:layout_marginTop="110dp"
     		    android:contentDescription="@string/imageViewDescription"
     		    android:src="@drawable/odol" />
     		
     		 <TextView
     		      android:id="@+id/textviewOdol"
     		      android:layout_width="match_parent"
     		      android:layout_height="wrap_content"
      		      android:layout_below="@+id/tipsodol"
      		      android:layout_marginLeft="20dp"
      		      android:layout_marginRight="20dp"
     		      android:gravity="center_horizontal"
     		      android:text="@string/TextMemilihOdol"
     		      android:textSize="22sp"
    	          android:textColor="@color/content" />
     		 
    
     	</RelativeLayout>
     
    </ScrollView>
    
     </RelativeLayout>