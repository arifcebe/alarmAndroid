<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bg_main">
    
    <!-- Pagi -->
    
    
     <TextView 
         android:id="@+id/sikatgigipagi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="25dp"
         android:text="@string/SikatGigiPagi"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="10dp"
         android:textSize="18sp"
    	 android:textStyle="bold"
    	 android:textColor="@color/contentTitle"
         android:textAppearance="?android:attr/textAppearanceMedium"
             />
     
     
    <ImageView
     	android:id="@+id/iconPagi"
     	android:layout_width="60dp"
     	android:layout_height="60dp"
     	android:layout_alignParentLeft="true"
     	android:layout_marginLeft="10dp"
     	android:layout_marginTop="55dp"
     	android:src="@drawable/ic_pagi"
     	android:contentDescription="@string/imageViewDescription" />
    
    <EditText 
        android:id="@+id/editPagi"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_toRightOf="@+id/iconPagi"
        android:inputType="text"/>
    
    <ToggleButton 
        android:id="@+id/togglePagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/editPagi"
        android:checked="false"/>
    
    
    <!-- Malam -->
    
     <TextView 
        android:id="@+id/sikatgigimalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:text="@string/SikatGigiMalam"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
    	android:textStyle="bold"
    	android:textColor="@color/contentTitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
             />
    
     <ImageView
     	android:id="@+id/iconMalam"
     	android:layout_width="60dp"
     	android:layout_height="60dp"
     	android:layout_alignParentLeft="true"
     	android:layout_marginLeft="10dp"
   		android:layout_marginTop="165dp"
     	android:src="@drawable/ic_malam"
     	android:contentDescription="@string/imageViewDescription" />
    
      <EditText 
        android:id="@+id/editMalam"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_toRightOf="@+id/iconPagi"
        android:inputType="text"/>
    
    <ToggleButton 
        android:id="@+id/toggleMalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_toRightOf="@+id/editPagi"/>
    
    <!--CheckUp -->
    
    
     <TextView 
         android:id="@+id/periksagigi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="245dp"
         android:text="@string/periksagigi"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="10dp"
         android:textSize="18sp"
    	 android:textStyle="bold"
    	 android:textColor="@color/contentTitle"
         android:textAppearance="?android:attr/textAppearanceMedium"
             />
        
    
     <ImageView
     	android:id="@+id/iconPeriksa"
     	android:layout_width="60dp"
     	android:layout_height="60dp"
     	android:layout_alignParentLeft="true"
     	android:layout_marginLeft="10dp"
   		android:layout_marginTop="275dp"
     	android:src="@drawable/ic_calender"
     	android:contentDescription="@string/imageViewDescription" />
    
      <EditText 
        android:id="@+id/editPeriksa"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="305dp"
        android:layout_toRightOf="@+id/iconPagi"
        android:inputType="text"/>
    
    <ToggleButton 
        android:id="@+id/togglePeriksa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="285dp"
        android:layout_toRightOf="@+id/editPagi"/>
    
    
    
    

</RelativeLayout>